<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom"

        android:src="@drawable/if_book2_254204" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        >
        
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="60dp"
            android:gravity="bottom"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_lock_outline_black_24dp"
            />

        <TextView
            android:id="@+id/txt_password_1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/border2"
            android:layout_marginBottom="30dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_password_2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/border2"
            android:layout_marginBottom="30dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_password_3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border2"
            android:layout_marginBottom="30dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_password_4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border2"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="30dp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >
        <Button
            android:id="@+id/btn_1"
            style="@style/PasswordButtonStyle"
            android:text="1" />
        <Button
            android:id="@+id/btn_2"
            style="@style/PasswordButtonStyle"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/PasswordButtonStyle"
            android:text="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

        <Button
            android:id="@+id/btn_4"
            style="@style/PasswordButtonStyle"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/PasswordButtonStyle"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/PasswordButtonStyle"
            android:text="6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >
        <Button
            android:id="@+id/btn_7"
            style="@style/PasswordButtonStyle"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/PasswordButtonStyle"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/PasswordButtonStyle"
            android:text="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

        <Button
            style="@style/PasswordButtonStyle"/>

        <Button
            android:id="@+id/btn_0"
            style="@style/PasswordButtonStyle"
            android:text="0"/>

        <Button
            style="@style/PasswordButtonStyle"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
