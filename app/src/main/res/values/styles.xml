<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/goyang</item>
    </style>

    <style name="DateTextStyle">
        <item name="android:text">년 월 일</item>
        <item name="android:textSize">22dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TimeTextStyle">
        <item name="android:text">시 분</item>
        <item name="android:textSize">19dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DiaryContentTextStyle">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="PasswordButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#3b3b3b</item>
        <item name="android:background">#ffefca</item>
        <item name="android:textSize">30dp</item>
    </style>

</resources>
